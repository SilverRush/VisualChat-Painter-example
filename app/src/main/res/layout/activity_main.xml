<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:fab="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".MainActivity">

        <com.example.rex.visualchatexample.view_Canvas
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:id="@+id/canvasboard"
            android:background="#ffe5e5e5" />

        <com.github.clans.fab.FloatingActionButton
            android:id="@+id/fab1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|right"
            android:src="@drawable/ic_gesture"
            fab:fab_colorNormal="@color/fab_normal"
            fab:fab_colorPressed="@color/fab_pressed"
            fab:fab_colorRipple="@color/fab_ripple"
            fab:fab_size="normal"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:longClickable="true" />

    <com.github.clans.fab.FloatingActionMenu
        android:id="@+id/floatmenu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        fab:menu_colorNormal="#DA4336"
        fab:menu_colorPressed="#E75043"
        fab:menu_colorRipple="#99FFFFFF"
        fab:menu_icon="@drawable/ic_add"
        fab:menu_backgroundColor="@android:color/transparent"
        android:visibility="gone">

        <com.github.clans.fab.FloatingActionButton
            android:id="@+id/item_share"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_share"
            fab:fab_label="@string/label_share" />

        <com.github.clans.fab.FloatingActionButton
            android:id="@+id/item_load"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_insert_photo"
            fab:fab_label="@string/label_loadPic" />

        <com.github.clans.fab.FloatingActionButton
            android:id="@+id/item_colorplate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_palette"
            fab:fab_label="@string/label_colorPlate" />

        <com.github.clans.fab.FloatingActionButton
            android:id="@+id/item_eraser"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_eraser"
            fab:fab_label="@string/label_eraser" />

    </com.github.clans.fab.FloatingActionMenu>

</RelativeLayout>
